DROP TABLE goals;
DROP TABLE users;


CREATE TABLE users (
  id SERIAL,
  auth0_id TEXT,
  email TEXT,
  pictureUrl TEXT,
  name TEXT
);

CREATE TABLE task (
    taskid SERIAL PRIMARY KEY,
    task TEXT,
    completed BOOLEAN,
    goalid INTEGER REFERENCES goals(goalsid)
);

CREATE TABLE goals (
    goalsid SERIAL PRIMARY KEY,
    users INTEGER REFERENCES users(id),
    goalname TEXT,
    description TEXT,
    startdate TEXT,
    enddate TEXT
)

SELECT * FROM goals;
SELECT * FROM users;